{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["src/components/*"],
			"@/providers/*": ["src/providers/*"],
			"@/utils/*": ["src/utils/*"],
			"@/types/*": ["src/types/*"],
			"@/consts/*": ["src/consts/*"],
			"@/tests/*": ["tests/*"],
			"@/src/*": ["src/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "jest.config.js", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
